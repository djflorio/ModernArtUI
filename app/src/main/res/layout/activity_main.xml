<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">
    <RelativeLayout
        android:id="@+id/artContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/redView"
            android:background="@color/red"
            android:tag="@color/red"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp">
        </View>
        <View
            android:id="@+id/blueView"
            android:background="@color/blue"
            android:tag="@color/blue"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_toRightOf="@id/redView"
            android:layout_toEndOf="@id/redView">
        </View>
        <View
            android:id="@+id/greyView"
            android:background="@color/grey"
            android:tag="@color/grey"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_below="@id/redView"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true">
        </View>
        <View
            android:id="@+id/purpleView"
            android:background="@color/purple"
            android:tag="@color/purple"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_below="@id/redView"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_toLeftOf="@id/greyView"
            android:layout_toStartOf="@id/greyView">
        </View>
        <View
            android:id="@+id/yellowView"
            android:background="@color/yellow"
            android:tag="@color/yellow"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_alignTop="@id/greyView"
            android:layout_toRightOf="@id/greyView"
            android:layout_toEndOf="@id/greyView"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp">
        </View>
        <View
            android:id="@+id/greenView"
            android:background="@color/green"
            android:tag="@color/green"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:layout_below="@id/greyView"
            android:layout_marginTop="16dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp">
        </View>
        <View
            android:id="@+id/orangeView"
            android:background="@color/orange"
            android:tag="@color/orange"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_toLeftOf="@id/greenView"
            android:layout_toStartOf="@id/greenView"
            android:layout_alignTop="@id/greenView">
        </View>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/colorSliderContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/artContainer"
        android:layout_marginTop="16dp">
        <SeekBar
            android:id="@+id/colorSlider"
            android:background="@color/grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</RelativeLayout>
